;//PRINT POINTS OF PLAYERS ON THE SCREEN
PRINT_POINTS MACRO NUM,temp,ROW,COL
	MOV AL,NUM
	MOV AH,00
	MOV BL,10
	;PRINT 1ST DIGIT
	DIV BL
	MOV temp,AH ;BACKUP REMAINDER
	
	ADD AL,30H
	;;MOVE CURSOR POS 
    MOV DH,ROW           ;INTIALIZE COL AND row
    MOV DL,COL
    MOV AH,2
	MOV BH,0
    INT 10H
	PRINT_CHAR_COLORED
	INC DL
	MOV AL,temp ;GET REMAINDER
	ADD AL,30H
	MOV AH,2
	MOV BH,0
    INT 10H
	PRINT_CHAR_COLORED
ENDM PRINT_POINTS